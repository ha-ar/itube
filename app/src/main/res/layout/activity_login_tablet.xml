<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:layout_height="wrap_content">
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:background="@drawable/background_tablet"
    android:paddingBottom="5dp"
    android:weightSum="2"
    android:id="@+id/email_login_form"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="0dp"
        android:layout_weight=".8"
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/logo"
            android:layout_marginTop="83dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center|center_horizontal"
            android:layout_above="@+id/textView"
            android:background="@drawable/logo"
            android:layout_gravity="center_horizontal" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Watch over 100 million Movies \n آى تیوب با بیش از صد میلیون فیلم و شو..."
            android:id="@+id/textView"
            android:lines="2"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textSize="19sp"
            android:gravity="center|center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="85dp" />
        </LinearLayout>
    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent">

        <AutoCompleteTextView android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:drawableRight="@drawable/user"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:text="ali11@gmail.com"
            android:textSize="30sp"
            android:textCursorDrawable="@null"
            android:textColor="@android:color/white"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:textStyle="bold"
            android:textColorHint="@android:color/white"
            android:background ="@drawable/roundable_corner"
            android:hint="Email"
            android:singleLine="true"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/password"
            android:layout_alignLeft="@+id/password"
            android:layout_alignStart="@+id/password"
            android:layout_marginTop="85dp" />

        <EditText android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingRight="6dp"
            android:paddingLeft="15dp"
            android:textSize="30sp"
            android:text="12341234"
            android:textCursorDrawable="@null"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:drawableRight="@drawable/lock"
            android:background ="@drawable/roundable_corner"
            android:inputType="textPassword"
            android:imeOptions="actionUnspecified"
            android:maxLines="1"
            android:textColorHint="@android:color/white"
            android:hint="Password"
            android:singleLine="true"
            android:layout_below="@+id/email" />

        <Button android:id="@+id/email_sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/login_tablet"
            android:layout_below="@+id/password"
            android:layout_alignRight="@+id/password"
            android:layout_alignLeft="@+id/password"/>

        <Button android:id="@+id/register_here"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignRight="@+id/password"
            android:layout_alignLeft="@+id/password"
            android:background="@drawable/register_tablet"
            android:layout_below="@+id/email_sign_in_button"
            android:layout_marginTop="120dp" />



    </RelativeLayout>

</LinearLayout>

</ScrollView>

