<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:background="@drawable/background_tablet"
    android:paddingBottom="5dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity">

    <RelativeLayout android:id="@+id/email_login_form"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:id="@+id/logo"
            android:layout_alignTop="@+id/email"
            android:background="@drawable/logo"
            android:layout_gravity="center_horizontal" />

        <AutoCompleteTextView android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:drawableRight="@drawable/user"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:text="ali11@gmail.com"
            android:textSize="30sp"
            android:textCursorDrawable="@null"
            android:textColor="@android:color/white"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:textStyle="bold"
            android:textColorHint="@android:color/white"
            android:completionHint="Email"
            android:background ="@drawable/roundable_corner"
            android:hint="Email"
            android:singleLine="true"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/password"
            android:layout_alignLeft="@+id/password"
            android:layout_alignStart="@+id/password"
            android:layout_marginTop="85dp" />

        <EditText android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingRight="6dp"
            android:paddingLeft="15dp"
            android:textSize="30sp"
            android:text="12341234"
            android:textCursorDrawable="@null"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="150dp"
            android:drawableRight="@drawable/lock"
            android:background ="@drawable/roundable_corner"
            android:inputType="textPassword"
            android:imeActionId="@+id/login"
            android:imeOptions="actionUnspecified"
            android:maxLines="1"
            android:textColorHint="@android:color/white"
            android:hint="Password"
            android:singleLine="true"
            android:layout_below="@+id/email"
            android:layout_toRightOf="@+id/textView"
            android:layout_toEndOf="@+id/textView" />

        <Button android:id="@+id/email_sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/login_tablet"
            android:layout_alignBottom="@+id/logo"
            android:layout_above="@+id/register_here"
            android:layout_alignRight="@+id/password"
            android:layout_alignLeft="@+id/password"/>

        <Button android:id="@+id/register_here"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignRight="@+id/password"
            android:background="@drawable/register_tablet"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignLeft="@+id/email_sign_in_button"
            android:layout_alignStart="@+id/email_sign_in_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Watch over 100 million Movies \n آى ویڈیو با بیش از صد میلیون فیلم و شو..."
            android:id="@+id/textView"
            android:lines="2"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textSize="19sp"
            android:gravity="center|center_horizontal"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="85dp" />

    </RelativeLayout>

</RelativeLayout>



