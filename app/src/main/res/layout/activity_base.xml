<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/BaseLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:id="@+id/layout1"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:padding="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#9eded7"
        android:layout_toRightOf="@+id/smalllogo"
        android:id="@+id/select_language"
        android:layout_centerVertical="true"/>

    <Button
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:id="@+id/menu"
        android:paddingRight="50dp"
        android:background="@drawable/ic_drawer"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true" />
    <SearchView
        android:id="@+id/search"
        android:textColor="#9eded7"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="end"
        android:layout_centerVertical="true"
        android:actionViewClass="android.widget.SearchView"
        android:showAsAction="collapseActionView"
        android:layout_marginLeft="110dp"
        android:layout_toLeftOf="@+id/select_language"
        android:title="Search"/>

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/smalllogo"
        android:layout_centerVertical="true"
        android:background="@drawable/logo"
         android:layout_toRightOf="@+id/menu"
        android:layout_toEndOf="@+id/menu" />
</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.7">
        </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="19sp"
        android:text="Watch over 100 million Movies \n آى ویڈیو با بیش از صد میلیون فیلم و شو..."
        android:id="@+id/textView"
        android:textStyle="bold"
        android:layout_weight=".3"
        android:textColor="@android:color/black"
        android:gravity="center_horizontal" />
        <TextView
            android:layout_width="match_parent"
            android:layout_weight=".1"
            android:layout_height="0dp"/>
    </LinearLayout>

</LinearLayout>